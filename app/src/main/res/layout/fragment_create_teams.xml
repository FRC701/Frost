<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/createTeamsLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Create.CreateTeams">



    <EditText
        android:id="@+id/teamNumber"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@drawable/text_box"
        android:drawableStart="@drawable/icon_name"
        android:drawablePadding="20dp"
        android:ems="10"
        android:hint="@string/editTextTeamNumber"
        android:inputType="number"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.356" />

    <Button
        android:id="@+id/createTeam"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:text="@string/buttonCreateTeam"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teamNumber"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintVertical_bias="0.120"/>

</androidx.constraintlayout.widget.ConstraintLayout>